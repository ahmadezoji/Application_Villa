    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36mm"
        android:orientation="vertical">

        <EditText
            android:textAlignment="center"
            android:hint="عنوان"
            android:id="@+id/VTitle"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1" />

        <EditText
            android:id="@+id/VCost"
            android:textAlignment="center"
            android:hint="قیمت :تومان"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/VRoomCnt"
            android:textAlignment="center"
            android:hint="تعداد اتاق :نفر"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1"/>

        <EditText
            android:id="@+id/VCapacity"
            android:textAlignment="center"
            android:hint="ظرفیت :نفر"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1"/>

        <EditText
            android:id="@+id/VArea"
            android:textAlignment="center"
            android:hint="متراژ :متر"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/VAdderss"
            android:textAlignment="center"
            android:hint="آدرس"
            android:layout_width="match_parent"
            android:layout_height="0mm"
            android:layout_weight="0.1"/>
    </LinearLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_InsertVilla"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="0mm"
        android:layout_weight="5"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="Onclick_BtnCancle"
            android:text="لغو"
            android:textAlignment="center"
            android:layout_weight="0.25"
            android:layout_width="0mm"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="Onclick_BtnAdd"
            android:text="ثبت"
            android:textAlignment="center"
            android:layout_weight="0.25"
            android:layout_width="0mm"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/BtngoToGallery"
            android:text="گالری"
            android:layout_width="0mm"
            android:layout_weight="0.25"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="20mm"
            android:id="@+id/btnTakePicture"
            android:text="دوربین"
            android:layout_width="0mm"
            android:layout_weight="0.25"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/m_uploadBtn"
            android:text="آپلود"
            android:layout_width="0mm"
            android:layout_weight="0.25"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
