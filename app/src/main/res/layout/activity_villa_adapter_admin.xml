<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="3mm"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="3mm"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0mm"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:padding="1mm">

            <TextView
                android:textSize="3mm"
                android:id="@+id/m_adapter_Cost"
                android:layout_margin="1mm"
                android:background="#D59999"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="8mm" />

            <TextView
                android:textSize="3mm"
                android:id="@+id/m_adapter_RoomCnt"
                android:layout_margin="1mm"
                android:background="#D59999"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="8mm" />

            <TextView
                android:textSize="3mm"
                android:id="@+id/m_adapter_Area"
                android:layout_margin="1mm"
                android:background="#D59999"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="8mm" />

        </LinearLayout>

        <!--android:padding="4.5mm"-->
        <ImageView

            android:id="@+id/m_adapter_img"
            android:layout_margin="1mm"
            android:background="#E7D6D6"
            android:layout_weight="0.5"
            android:layout_width="0mm"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:padding="1mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Edit"
            android:id="@+id/m_EditBtn"
            android:layout_weight="0.1"
            android:layout_width="0mm"
            android:layout_height="wrap_content" />
        <Button
            android:text="Del"
            android:id="@+id/m_DeleteBtn"
            android:layout_weight="0.1"
            android:layout_width="0mm"
            android:layout_height="wrap_content" />

    </LinearLayout>

