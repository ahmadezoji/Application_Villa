<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title"
        android:id="@+id/txt_title_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"
        android:id="@+id/txt_address_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="lat"
        android:id="@+id/txt_lat_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="lon"
        android:id="@+id/txt_lon_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="cost"
        android:id="@+id/txt_price_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="room count"
        android:id="@+id/txt_roomcnt_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="capacity"
        android:id="@+id/txt_Capacity_editDlg"/>
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="area"
        android:id="@+id/txt_area_editDlg"/>

    <LinearLayout
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_villa_editDlg"
            android:layout_width="0mm"
            android:layout_weight="4"
            android:layout_height="30mm"/>

        <Button
            android:id="@+id/btn_upload_editDlg"
            android:layout_marginRight="5dp"
            android:background="@color/primaryColor"
            android:text="Upload"
            android:layout_weight="1"
            android:layout_width="0mm"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_camera_editDlg"
            android:background="@color/pressColor"
            android:text="Camera"
            android:layout_weight="1"
            android:layout_width="0mm"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1mm"
        android:background="#51000000"
        >
        <Button
            android:layout_width="0mm"
            android:layout_marginRight="2mm"
            android:layout_marginLeft="1mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#F14A4A"
            android:text="Gallery"
            android:id="@+id/btn_gotoGallery"/>
        <Button
            android:layout_width="0mm"
            android:layout_marginRight="2mm"
            android:layout_marginLeft="1mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#F14A4A"
            android:text="Cancle"
            android:id="@+id/btn_dismiss" />
        <Button
            android:layout_width="0mm"
            android:layout_marginLeft="2mm"
            android:layout_marginRight="1mm"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#F14A4A"
            android:text="Save"
            android:id="@+id/btn_update"
            android:onClick="onClick_btn_update" />


    </LinearLayout>





</LinearLayout>