<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/Transparent"
        android:layout_height="0mm"
        android:layout_weight="0.5">
        <TextView
            android:onClick="OnUser_Click"
            android:id="@+id/m_UserName"
            android:background="@drawable/item_selected"
            android:textColor="@color/pressColor"
            android:textAlignment="center"
            android:layout_width="0mm"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_weight="8"
            android:layout_width="0mm"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="0mm"
        android:layout_width="match_parent"
        android:layout_height="0mm"
        android:layout_weight="9">
        <Button
            android:onClick="Onclick_BtnAdd"
            android:background="@drawable/item_selected"
            android:id="@+id/m_Btn_Add"
            android:textSize="3mm"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_view_Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />
    </LinearLayout>
</LinearLayout>